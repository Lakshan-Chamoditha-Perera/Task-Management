generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)             
  isCompleted Boolean  @default(false)              
  priority    Priority                             
  createdAt   DateTime @default(now())              
}

enum Priority {
  low
  medium
  high
}
